<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="407dp"
        android:layout_height="451dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView

            android:layout_width="428dp"
            android:layout_height="match_parent"
            android:src="@drawable/vader" />

    </FrameLayout>


    <Button
        android:id="@+id/buttonSalir"
        android:fontFamily="@font/starjedi"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:onClick="OnClick"
        android:text="@string/salir"
        app:layout_constraintStart_toStartOf="@+id/buttonAcceso"
        app:layout_constraintTop_toBottomOf="@+id/buttonAcceso" />

    <Button
        android:id="@+id/buttonAcceso"
        android:fontFamily="@font/starjedi"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#770C0C"
        android:onClick="OnClick"
        android:text="@string/acceder"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textViewApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/starjedi"
        android:text="@string/vaderCalculator"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>